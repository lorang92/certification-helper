@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Http GET using Ajax with jQuery (deferred syntax)</title>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    
    <script type="text/javascript">
        function myOnKeyUp() {

            var URL = "/Home/EchoInUppercase?text=" + $("#myInputField").val();

            // This URL calls a different server method, which echos the text 3 times.
            // var URL = "/Home/EchoInUppercaseMultipleTimes?text=" + $("#myInputField").val() + "&repeatCount=3";

            $.ajax({
                type: "GET",
                url: URL,
                cache: false
            })
            .done(function (data) {
                $("#myEchoField").html(data);
                console.log("done() called, with data " + data);
            })
            .fail(function (data) {
                console.log("fail() called, with data " + data);
            })
            .always(function (data) {
                console.log("always() called, with data " + data);
            });
        }
    </script>

</head>
<body>
    <header>
        <h1>Http GET using Ajax with jQuery (deferred syntax)</h1>
    </header>

    <main>
        <label for="myInputField">Text:</label>
        <input type="text" id="myInputField" onkeyup="myOnKeyUp()" autofocus />
        <br /> <br />
        <p id="myEchoField"></p>
    </main>

    <footer>
        <hr />
        @Html.ActionLink("Home", "Index")
    </footer>
</body>
</html>
