@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Http POST using Ajax Directly</title>

    <script>
        function upload(e) {
            e.preventDefault();

            const form = e.target;
            const fileUpload = form['fileUpload'];
            const files = fileUpload.files;
            const formData = new FormData();

            for (const file of files) {
                formData.append('file[]', file);
            }

            const request = new XMLHttpRequest();
            request.open('POST', '/Home/Upload');
            request.onreadystatechange = function () {
                console.log(request.readyState);
                console.log(request.DONE);
                if (request.readyState == request.DONE) {
                    if (request.status == 200) {
                        alert('Server response: ' + request.responseText);
                        console.log('Success with response: ' + request.responseText);
                    } else {
                        console.error('Error with status: ' + request.status + ' - ' + request.statusText);
                    }
                }
            }
            request.send(formData);

            // Clear the files in the input
            fileUpload.value = '';
        }
    </script>
</head>
<body>
    <header>
        <h1>Http POST using Ajax Directly</h1>
    </header>

    <main>
        <form onsubmit="upload(event)">
            <label for="fileUpload">Select File to Upload:</label>
            <input id="fileUpload" type="file" multiple />
            <br /><br />
            <button typeof="submit">Upload File</button>
        </form>
    </main>

    <footer>
        <hr />
        @Html.ActionLink("Home", "Index")
    </footer>
</body>
</html>
