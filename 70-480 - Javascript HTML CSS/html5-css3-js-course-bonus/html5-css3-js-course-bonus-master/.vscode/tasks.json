{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "clean",
      "args": ["run", "clean"]
    },
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "open",
      "args": ["run", "open", "--", "${file}"],
      "isBuildCommand": false
    },
    {
      "taskName": "openserver",
      "args": ["run", "openserver", "--", "${fileDirname}"],
      "isBuildCommand": true
    },
    {
      "taskName": "update",
      "args": ["update"]
    }
  ]
}